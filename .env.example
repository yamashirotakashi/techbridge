# TechBridge Environment Variables Example
# Copy this file to .env and fill in your actual values

# Application Settings
PROJECT_NAME=TechBridge
VERSION=0.1.0
API_V1_STR=/api/v1
ENVIRONMENT=development
LOG_LEVEL=INFO
LOG_FORMAT=json
SECRET_KEY=your-secret-key-here-change-this-in-production

# Database Configuration
POSTGRES_SERVER=localhost
POSTGRES_USER=techbridge
POSTGRES_PASSWORD=techbridge
POSTGRES_DB=techbridge
DATABASE_URL=postgresql+asyncpg://techbridge:techbridge@localhost:5432/techbridge

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_APP_TOKEN=xapp-your-slack-app-token-here

# Google Sheets Configuration
GOOGLE_SHEETS_ID=17DKsMGQ6kW4QafWl7AQdx6XCgxHHxLYqTY0OnSo8rPI
GOOGLE_SERVICE_ACCOUNT_KEY={"type": "service_account", "project_id": "your-project"}

# External Systems
TECH_WEBHOOK_SECRET=your-tech-webhook-secret
TECHZIP_API_ENDPOINT=http://localhost:8002

# CORS Configuration 
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Security Settings
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Monitoring (optional)
SENTRY_DSN=
ENABLE_METRICS=true

# Notification Settings
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=5

# Google Sheets API Settings
SHEETS_API_TIMEOUT=30
SHEETS_API_RETRY_ATTEMPTS=3